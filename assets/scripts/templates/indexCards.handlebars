{{#each flash_cards as |individual_flash_card|}}
{{!-- {{log individual_flash_card}} --}}

<section style="background: url(https://images-na.ssl-images-amazon.com/images/I/71atJIqKIcL._SL1500_.jpg)no-repeat center; width: 70vw; margin-left: 10px">
    <div>
        <hr />
        <h3 style="margin-left: 20px" data-id="{{individual_flash_card.id}}"> <small>Fallacy:</small> <br /><strong>{{individual_flash_card.fallacy_name}}</strong>
            <br> <small> <br /> Example: </small> <br /> {{individual_flash_card.fallacy_example}} <br /> <span style="color: red"><br />
                Example ID:
                {{individual_flash_card.id}}
            </span>
        </h3>
    </div>
</section>

<section data-id="{{individual_flash_card.id}}">
    <button type="submit" value="Remove" class="btn btn-danger">Remove</button>
    <button type="submit" class="btn btn-primary">Edit Example</button>
    <hr />
</section>
<br />

{{/each}}


